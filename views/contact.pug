extends layout

block content

    .site-section.bg-light
        .container
            .row
                .col-md-7.mb-5
                    form.p-5.bg-white(action="#")
                        .row.form-group
                            .col-md-6.mb-3.mb-md-0
                                label.text-black(for="fname") First Name
                                input#fname.form-control(type="text")
                            .col-md-6
                                label.text-black(for="lname") Last Name
                                input#lname.form-control(type="text")
                        .row.form-group
                            .col-md-12
                                label.text-black(for="email") Email
                                input#email.form-control(type="email")
                        .row.form-group
                            .col-md-12
                                label.text-black(for="subject") Subject
                                input#subject.form-control(type="subject")
                        .row.form-group
                            .col-md-12
                                label.text-black(for="message") Message
                                textarea#message.form-control(name="message" cols="30" rows="7" placeholder="Write your notes or questions here...")
                        .row.form-group
                            .col-md-12
                                input.btn.btn-primary.py-2.px-4.text-white(type="submit" value="Send Message")
                .col-md-5
                    .p-4.mb-3.bg-white
                        p.mb-0.font-weight-bold Address
                        p.mb-4 203 Fake St. Mountain View, San Francisco, California, USA
                        p.mb-0.font-weight-bold Phone
                        p.mb-4
                            a(href="#") +1 232 3235 324
                        p.mb-0.font-weight-bold Email Address
                        p.mb-0
                            a(href="#") youremail@domain.com