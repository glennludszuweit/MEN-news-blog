extends layout

block content

    .site-section.bg-light
      .row
        .col-lg-10.col-xl-9.mx-auto
          .card.card-signin.flex-row.m-2
            .card-img-left.d-none.d-md-flex
            .card-body
            
              // Login
              h5.card-title.text-center.font-weight-bold 
                | Login
              form.form-signin
                .form-label-group
                  input#signinEmail.form-control(type="email" placeholder="Email address" required autofocus)
                  label(for="signinEmail") Email address
                .form-label-group
                  input#signinPassword.form-control(type="password" placeholder="Password" required)
                  label(for="signinPassword") Password
                button.btn.btn-lg.btn-primary.btn-block.text-uppercase(type="submit")
                  | Login
              .p-3
              hr
              // SignUp
              h5.card-title.text-center.font-weight-bold
                | Register
              form.form-signup
                .form-label-group
                  input#signupName.form-control(type="text" placeholder="Name" required)
                  label(for="signupName") Name
                .form-label-group
                  input#signupEmail.form-control(type="email" placeholder="Email address" required)
                  label(for="signupEmail") Email address
                .form-label-group
                  input#signupPassword.form-control(type="password" placeholder="Password" required)
                  label(for="signupPassword") Password
                .form-label-group
                  input#confirmPassword.form-control(type="password" placeholder="Password" required)
                  label(for="confirmPassword") Confirm password
                button.btn.btn-lg.btn-primary.btn-block.text-uppercase(type="submit")
                  | Register
              .p-3    