.site-mobile-menu
    .site-mobile-menu-header
        .site-mobile-menu-close.mt-3
            span.icon-close2.js-menu-toggle
    .site-mobile-menu-body
header.site-navbar(role="banner")
    .container-fluid
        .row.align-items-center
            .col-12.search-form-wrap.js-search-form
                form(method="get" action="#")
                    input#s.form-control(type="text" placeholder="Search...")
                    button.search-btn(type="submit")
                        span.icon-search
            .col-4.site-logo
                a.text-black.h2.mb-0(href="/")
                    img.logo-img(src="/images/newsblog.png" alt="logo" width="150")
            .col-8.text-right
                nav.site-navigation(role="navigation")
                    ul.site-menu.js-clone-nav.mr-auto.d-none.d-lg-block.mb-0
                        li
                            a(href="/") Home
                        li
                            a(href="/politics") Politics
                        li
                            a(href="/tech") Tech
                        li
                            a(href="/entertainment") Entertainment
                        li
                            a(href="/travel") Travel
                        li
                            a(href="/sports") Sports
                        li
                            a(href="/auth") Login/Signup